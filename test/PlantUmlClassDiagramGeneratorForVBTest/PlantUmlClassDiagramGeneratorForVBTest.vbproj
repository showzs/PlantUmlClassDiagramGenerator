<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>PlantUmlClassDiagramGeneratorForVBTest</RootNamespace>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.7.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="1.2.1" />
    <PackageReference Include="MSTest.TestFramework" Version="1.2.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\PlantUmlClassDiagramGenerator.Library\PlantUmlClassDiagramGenerator.Library.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="TestData\GenericsType.vb" />
    <Compile Remove="TestData\InputClasses.vb" />
  </ItemGroup>

  <ItemGroup>
    <None Include="TestData\GenericsType.vb">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="TestData\InputClasses.vb">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="uml\all.puml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="uml\GenericsType.puml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="uml\public.puml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="uml\withoutPrivate.puml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
